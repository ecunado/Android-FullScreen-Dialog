<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/padDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/textView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#DBE4E1"
        android:layout_height="140dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:gravity="center"
            android:text=""
            android:textSize="50sp">
        </TextView>
        <TextView
            android:id="@+id/pinAsterisk"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textSize="42sp">
        </TextView>
        <TextView
            android:id="@+id/pinASteriskTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Last PIN Attempt"
            android:fontFamily="@font/monserrat_regular"
            android:textSize="20sp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pinpad_number_height"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">
            <TextView
                android:id="@+id/oneButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="1"
                android:textSize="60dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/twoButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="2"
                android:textSize="60dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">
            <TextView
                android:id="@+id/threeButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="3"
                android:textSize="60dp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pinpad_number_height"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">
            <TextView
                android:id="@+id/fourButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="4"
                android:textSize="60dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/fiveButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="5"
                android:textSize="60dp" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/sixButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="6"
                android:textSize="60dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pinpad_number_height"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/sevenButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="7"
                android:textSize="60dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/eightButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:text="8"
                android:gravity="center"
                android:textSize="60dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/number_button_background_pinpad"
            android:clickable="true">

            <TextView
                android:id="@+id/nineButton"
                android:fontFamily="@font/montserrat_thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:text="9"
                android:gravity="center"
                android:textSize="60dp"/>
        </FrameLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pinpad_number_bigger_button"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/cancel_button_background_pinpad"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancelButton"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:layout_centerInParent="true"
                android:src="@drawable/cancel"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pinpad_number_height"
                android:background="@drawable/number_button_background_pinpad"
                android:clickable="true">

                <TextView
                    android:id="@+id/zeroButton"
                    android:fontFamily="@font/montserrat_thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="60dp" />
            </FrameLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="@drawable/return_button_background_pinpad"
                android:clickable="true">

                <ImageView
                    android:id="@+id/returnButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/label"
                    android:text="TextView" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/enter_button_background_pinpad"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/acceptButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tick" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>